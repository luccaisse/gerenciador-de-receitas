generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @unique @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      String
  phone     String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          String    @id @default(uuid())
  title       String
  author      String
  description String
  price       Float
  type        String
  image       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orders      OrderItem[]
}

model Cart {
  id        String   @id @unique @default(uuid())
  personId    String
  bookId    String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id          String    @id @default(uuid())
  personId      String
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orderItems  OrderItem[]
  totalPrice  Float
}

model OrderItem {
  id         String    @id @default(uuid())
  orderId    String
  bookId     String
  quantity   Int
  price      Float
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  order      Order     @relation(fields: [orderId], references: [id])
  book       Book      @relation(fields: [bookId], references: [id])
}
